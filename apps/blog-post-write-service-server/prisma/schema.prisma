datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model BlogPost {
  author      String?
  content     String?
  createdAt   DateTime            @default(now())
  id          String              @id @default(cuid())
  publishedAt DateTime?
  status      EnumBlogPostStatus?
  title       String?
  updatedAt   DateTime            @updatedAt
}

enum EnumBlogPostStatus {
  Option1
}
